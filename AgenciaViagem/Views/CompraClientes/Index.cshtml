@model IEnumerable<AgenciaViagem.Models.CompraCliente>

@{
    ViewData["Title"] = "Tabela de compra";
}

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <style>
        body {
            background-color: rgb(238, 186, 42);
        }

        a {
            text-decoration: none;
            color: black;
        }

            a:hover {
                color: black;
            }
    </style>
</head>

<h1>Tabela de compras</h1>

<p>
    <a asp-action="Create">Cadastrar comprar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nome_cliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.sobrenome_cliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.local_partida)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.local_chegada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dia_ida)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dia_chegada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.qtd_passagem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.num_assento)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nome_cliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sobrenome_cliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.local_partida)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.local_chegada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dia_ida)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dia_chegada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.qtd_passagem)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.num_assento)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id_compra">Edit</a> | 
                <a asp-action="Details" asp-route-id="@item.Id_compra">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id_compra">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
