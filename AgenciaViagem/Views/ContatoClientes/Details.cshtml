@model AgenciaViagem.Models.ContatoCliente

@{
    ViewData["Title"] = "Details";
}

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <style>
        body {
            background-color: rgb(238, 186, 42);
        }

        a {
            text-decoration: none;
            color: black;
        }

            a:hover {
                color: black;
            }
    </style>
</head>

<h1>Informações do contato</h1>

<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.nome_contato)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nome_contato)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.sobrenome_contato)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.sobrenome_contato)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.telefone_contato)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.telefone_contato)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.cidade_contato)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.cidade_contato)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.regiao_contato)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.regiao_contato)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.email_contato)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.email_contato)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.motivo_contato)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.motivo_contato)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id_contato" class="btn btn-danger">Editar</a> 
    <a asp-action="Index" class="btn btn-dark">Voltar</a>
</div>
