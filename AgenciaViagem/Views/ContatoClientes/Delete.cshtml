@model AgenciaViagem.Models.ContatoCliente

@{
    ViewData["Title"] = "Delete";
}

<h1>Você tem certeza que deletará esse cadastro?</h1>
<p>Deletar esse cadastro é uma ação <strong>permanente</strong></p>
<div>
    <h4>Contato</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.nome_contato)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.nome_contato)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.sobrenome_contato)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.sobrenome_contato)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.telefone_contato)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.telefone_contato)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.cidade_contato)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.cidade_contato)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.regiao_contato)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.regiao_contato)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.email_contato)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.email_contato)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.motivo_contato)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.motivo_contato)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id_contato" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-dark">Voltar</a>
    </form>
</div>
