@model IEnumerable<AgenciaViagem.Models.CadastrarCliente>

@{
    ViewData["Title"] = "Index";
}

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <style>
        body {
            background-color: rgb(238, 186, 42);
        }

        a {
            text-decoration: none;
            color: black;
        }

            a:hover {
                color: black;
            }
    </style>
</head>

<h1>Tabela de clientes</h1>

<p>
    <a asp-action="Create">Cadastrar cliente</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nome_cliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.sobrenome_cliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.data_nasc_cliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.endereco_cliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.telefone_cliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cidade_cliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.email_cliente)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nome_cliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sobrenome_cliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.data_nasc_cliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.endereco_cliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.telefone_cliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cidade_cliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email_cliente)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id_cliente">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id_cliente">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id_cliente">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
